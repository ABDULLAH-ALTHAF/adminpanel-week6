<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e3dfdf;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 1rem;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #0f08dc;
        }

        .header h2 {
            margin: 0;
            font-size: 2.0rem;
        }

        .header .search-box input {
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .user-list {
            margin-top: 2rem;
            background-color: #fff;
            padding: 3rem;
            border-radius: 30px;
            box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th,
        table td {
            padding: 15px;
            text-align: left;
        }

        table th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .role-select {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .delete-icon {
            color: #f44336;
            cursor: pointer;
        }

        .delete-icon:hover {
            color: #d32f2f;
        }

        .invite-button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .invite-button:hover {
            background-color: #45a049;
        }

        
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h2>IRONSHIELD TEAM</h2>
            <div class="search-box">
        <form action="/admin/Search" method="GET" style="display: flex; justify-content: space-between; margin-bottom: 20px;">
          <input type="text" name="searchFor" placeholder="Search by name" style="flex: 1; padding: 10px; font-size: 16px; border: 2px solid #ddd; border-radius: 5px; margin-right: 10px;" />
          <button type="submit" style="padding: 10px 20px; font-size: 16px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">Search</button>
      </form>
            </div>
            <td><a href="/admin/createuser"><i class="fa-solid fa-user-plus" style="color: #0011ff;"></i></a></td>
            <a href="/admin/logout"><button class="invite-button">Logout</button></a>
        </div>

        <div class="user-list">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email address</th>
                        <th>Role</th>
                        <th>Actions</th>
                        <th>edit</th>
                    </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            
                            <td><a href=/admin/userDelete/<%= user._id %>><i class="fas fa-trash delete-icon"></i></a></td>
                            <td><a href=/admin/userEdit/<%= user._id %>><i class="fa-solid fa-user-pen" style="color: #001eff;"></i></a></i></td>
                        </tr>
                        <% }) %>  
                </tbody>
                
            </table>
        </div>
    </div>
</body>
</html>
